            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"role\": \"admin\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/users/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "USER_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/admin/users/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "users", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "USER_ID_HERE"
                }
              ]
            }
          }
        },
